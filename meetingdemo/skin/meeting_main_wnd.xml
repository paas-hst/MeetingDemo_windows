<?xml version="1.0" encoding="UTF-8"?>
<Window size="1200,700" caption="0,0,0,30" sizebox="4,4,4,4">
	<Font id="1" name="微软雅黑" size="16" bold="false" />
	<Font id="2" name="微软雅黑" size="14" bold="false" />
